{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "noLib": false,
        "useUnknownInCatchVariables": false,
        "noImplicitThis": true,
        "useDefineForClassFields": true,
        "allowJs": false,
        "strict": true,
        "lib": ["esnext", "dom"],
        "types": ["node"],
        "paths": {
            "@models": ["src/models"],
            "@models/*": ["src/models/*", ".generated/models/*"],
            "@modules": ["src/modules"],
            "@modules/*": ["src/modules/*", ".generated/modules/*"],
            "@services": ["src/services"],
            "@services/*": ["src/services/*", ".generated/services/*"],
            "@controllers": ["src/controllers"],
            "@controllers/*": ["src/controllers/*", ".generated/controllers/*"],
            "@contracts": ["src/contracts"],
            "@contracts/*": ["src/contracts/*", ".generated/contracts/*"],
            "@entities": ["src/entities"],
            "@entities/*": ["src/entities/*", ".generated/entities/*"],
            "@gateways": ["src/gateways"],
            "@gateways/*": ["src/gateways/*", ".generated/gateways/*"],
            "@protos": ["src/protos"],
            "@protos/*": ["src/protos/*", ".generated/protos/*"],
            "@generated": [".generated"],
            "@generated/*": [".generated/*"],
            "@g": [".generated"],
            "@g/*": [".generated/*"]
        }
    },
    "include": ["packages/**/*", "src/**/*.ts", ".generated/**/*.ts", "../../packages/plugin/api/posts.controller.ts", "config.ts"],
    "exclude": ["node_modules", "dist", "src/protos", "**/*.spec.ts"]
}
